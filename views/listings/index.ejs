<% layout("/templets/boilerplate") -%>
    <style>
        #filters{
            display: flex;
            margin-top:1rem;
        }
        .filter{
            margin-right: 2rem;
            text-align: center;
            opacity: 0.8; 
        }
        .filter:hover{
            opacity: 1;
        }
        .filter a{
            font-size: 0.7rem;
        }
        .scrollable-div::-webkit-scrollbar {
            display: none;
        }
        .outerdiv{
            display: flex;
            flex-wrap:wrap;
            align-items: center;
            margin-bottom:1rem;
        }
        .tax-toggle{
            margin-left: 2rem;
            border: 2px solid grey;
            border-radius: 10px;
            display: flex;
            align-items: center;
            padding: 5px;
            
        }
        .tax{
            display: none;
        }
    </style>
    <div class="outerdiv">
    <div id="filters" class="overflow-auto scrollable-div">
        
        <div class="filter">
            <div><i class="fa-solid fa-water-ladder"></i></div>
            <a class="nav-link" href="/listings/category?type=amazing pool">Amazing pools</a>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-tractor"></i></div>
            <a class="nav-link" href="/listings/category?type=farm">Farms</a>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-fire"></i></div>
            <a class="nav-link" href="/listings/category?type=trending">Trending</a>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-snowflake"></i></div>
            <a class="nav-link" href="/listings/category?type=arctic">Arctic</a>
        </div>
        <div class="filter">
            <i class="fa-solid fa-city"></i>
            <a class="nav-link" href="/listings/category?type=design">Design</a>
        </div>
        <div class="filter">
            <i class="fa-solid fa-mountain-city"></i>
            <a class="nav-link" href="/listings/category?type=countryside">Countryside</a>
        </div>
        <div class="filter">
            <i class="fa-solid fa-umbrella-beach"></i>
            <a class="nav-link" href="/listings/category?type=beach">Beach</a>
        </div>
        <div class="filter">
            <i class="fa-solid fa-baseball"></i>
            <a class="nav-link" href="/listings/category?type=play">Play</a>
        </div>
        <div class="filter">
            <i class="fa-solid fa-water"></i>
            <a class="nav-link" href="/listings/category?type=lake">Lake</a>
        </div>
        <div class="filter">
            <i class="fa-solid fa-landmark-dome"></i>
            <a class="nav-link" href="/listings/category?type=historical place">Historical places</a>
        </div>
        <div class="filter">
            <i class="fa-solid fa-campground"></i>
            <a class="nav-link" href="/listings/category?type=camping">Camping</a>
        </div>
    </div>
    <div class="tax-toggle mb-2 mt-2 ms-auto">
        <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
        </div>
    </div>
</div>
   

    <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1 row-cols-xs-1">
        <%for(Listing of allListings){%>
            <a href="/listings/<%=Listing._id%>" class="listing-link">
                <div class="card listing-card">
                    <img src="<%=Listing.image.url%>" class="card-img-top" style="height: 20rem;" alt="Listing image">
                    <div class="card-img-overlay">&hearts; Book Now</div>
                    <div class="card-body">
                      <p class="card-text">
                        <b><%=Listing.title%></b><br>
                        &#8377;<%=Listing.price.toLocaleString("en-IN")%> /nigth
                        <i class="tax">&nbsp; +18% GST</i>
                      </p>
                    </div>
                </div>
            </a>
        <%}%>
    </div>

<script>
    let taxSwitch = document.getElementById("flexSwitchCheckDefault");
    taxSwitch.addEventListener("click",()=>{
        let taxs = document.getElementsByClassName("tax");
        for(tax of taxs){
            console.log(tax.display);
            if(tax.style.display != "inline")
            {
                tax.style.display = "inline"
            }
            else{
                tax.style.display = "none"
            }
        }

    })
</script>
