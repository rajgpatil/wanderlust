<% layout("/templets/boilerplate") -%>
<script>
    const mapToken = "<%=process.env.MAP_TOKEN%>";
    const listing = <%-JSON.stringify(listing)%>
</script>
        <div class="row">
            <h3 class="col-6 offset-3 mb-4 listing-h3">
                <%=listing.title%>
            </h3>
            <div class="card col-6 offset-3 listing-card">
                <img src="<%=listing.image.url%>" class="card-img-top mb-3 show-img mb-4" alt="Listing Image">
                <div class="card-body">
                    <p class="card-text">
                        Owned By: <%=listing.owner.username%><br>
                        <%=listing.description%><br>
                            &#8377;<%=listing.price.toLocaleString("en-IN")%><br>
                                <%=listing.location%><br>
                                    <%=listing.country%><br>
                    </p>
                </div>
            </div>
            <% if(currUser && currUser._id.equals(listing.owner._id)){ %>
                <div class="row">
                    <div class="col-1 offset-3">
                        <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark btn-edit">Edit</a>
                        <br><br>
                    </div>
                    <div class="col-1">
                        <form method="post" action="/listings/<%=listing._id%>?_method=DELETE">
                            <button class="btn btn-dark">Delete</button>
                        </form>
                    </div>
                </div>
            <% } %>
            <div class="col-8 offset-3">
                <hr>
                <% if(currUser){ %>
                    <form method="post" action="/listings/<%=listing._id%>/review" novalidate       class="needs-validation">
                        <div class="mb-3">
                            <h3>Leave a Review</h3>
                        </div>
                        <!-- <div class="mb-3">
                            <label for="rating" class="form-label">Rating</label>
                            <input type="range" name="review[rating]" id="rating" min="1" max="5" class="form-range">
                        </div> -->
                        <div class="mb-3">
                            <label for="rating" class="form-label">Rating</label>
                            <fieldset class="starability-slot">
                                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                                <input type="radio" id="first-rate1" name="review[rating]" value="1"/>
                                <label for="first-rate1" title="Terrible">1 star</label>
                                <input type="radio" id="first-rate2" name="review[rating]" value="2"/>
                                <label for="first-rate2" title="Not good">2 stars</label>
                                <input type="radio" id="first-rate3" name="review[rating]" value="3"/>
                                <label for="first-rate3" title="Average">3 stars</label>
                                <input type="radio" id="first-rate4" name="review[rating]" value="4"/>
                                <label for="first-rate4" title="Very good">4 stars</label>
                                <input type="radio" id="first-rate5" name="review[rating]" value="5"/>
                                <label for="first-rate5" title="Amazing">5 stars</label>
                            </fieldset>
                        </div>
                        <div class="mb-3">
                            <label for="comment" class="form-label">Comment</label>
                            <textarea name="review[comment]" cols="10" rows="4" class="form-control" required></textarea>
                            <div class="invalid-feedback">
                                Please add some comments for review
                            </div>
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-outline-dark">Submit</button>
                        </div>
                    </form>
                    <hr>
                <% } %>
                <div class="row">
                    <% if(listing.reviews.length > 0){%>
                        <h3>All Reviews</h3>
                            <% for(review of listing.reviews){%>
                                <div class="card col-5 ms-3 mb-3">
                                    <div class="card-body">
                                        <p class="card-title mt-2">Created by: <b>@<%=review.auther.username%></b></p>
                                        <p class="starability-result" data-rating="<%=review.rating%>"></p>
                                        <p class="card-text"><%=review.comment%></p>
                                    </div>
                                    <% if(currUser && currUser._id.equals(review.auther.id) ){ %>
                                    <form method="post" action="/listings/<%=listing._id%>/review/<%=review._id%>?_method=DELETE">
                                        <button class="btn btn-sm btn-dark mb-2 mt-2 col-3">Delete</button>
                                    </form>
                                    <%}%>
                                </div>
                            <%}%>
                            <hr>
                        <%}%>
                </div>
            </div>
            <div class="row col-8 offset-3">
                <h3>Where youâ€™ll be</h3>
                <div id="map" class="col-sm-4"></div>
            </div>
        </div>

    <script src="/js/map.js"></script>


